<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        messagesPack="akkount.web.category">
    <data>
        <collection id="categoryDc"
                              class="akkount.entity.Category"
                              view="_local">
            <loader>
                <query>
                    <![CDATA[select e from akk$Category e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout spacing="true">
        <table id="categoryTable"
               height="100%"
               width="100%" dataContainer="categoryDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
                <column id="catType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="categoryTable.create"/>
                <button id="editBtn"
                        action="categoryTable.edit"/>
                <button id="removeBtn"
                        action="categoryTable.remove"/>
                <button id="refreshBtn"
                        action="categoryTable.refresh"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
