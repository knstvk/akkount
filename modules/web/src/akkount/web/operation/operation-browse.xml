<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        caption="msg://browseCaption"
        class="akkount.web.operation.OperationBrowse"
        focusComponent="operationTable"
        lookupComponent="operationTable"
        messagesPack="akkount.web.operation">
    <dsContext>
        <groupDatasource id="operationDs"
                         class="akkount.entity.Operation"
                         view="operation-browse">
            <query>
                <![CDATA[select e from akk$Operation e order by e.opDate desc, e.createTs desc]]>
            </query>
        </groupDatasource>
    </dsContext>
    <layout expand="operationTable"
            spacing="true">
        <filter id="filter"
                datasource="operationDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="operationTable"
                    height="100%"
                    width="100%">
            <actions>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="opType"/>
                <column id="opDate">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter" format="msg://opDateFormat"/>
                </column>
                <column id="acc1"/>
                <column id="amount1">
                    <formatter class="akkount.web.DecimalFormatter"/>
                </column>
                <column id="acc2"/>
                <column id="amount2">
                    <formatter class="akkount.web.DecimalFormatter"/>
                </column>
                <column id="category"/>
                <column id="comments"/>
                <column id="createdBy"/>
            </columns>
            <rows datasource="operationDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createExpenseBtn"/>
                <button id="createIncomeBtn"/>
                <button id="createTransferBtn"/>
                <button id="editBtn"
                        action="operationTable.edit"/>
                <button id="removeBtn"
                        action="operationTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
